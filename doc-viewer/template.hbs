{{layouts/main-loader
    onCancel=(action 'cancel')
    progress=percentLoaded
    isLoading=isLoading
}}

<div class="reveal-overlay">
  <div class="row collapse">
    <div class="columns small-12">
      <div class="toolbar menu-centered">
        <ul class="menu nav">
          <li>
            <a class="button" href="#"
              {{action 'download'}}>
              <i class="fa fa-download"></i>Télécharger</a>
          </li>
          <li>
            <a class="button" href="#"
              {{action 'print'}}>
              <i class="fa fa-print"></i>Imprimer</a>
          </li>
        </ul>
        <a href="#" {{action 'cancel'}} class="button close">
          <i class="fa fa-close"></i>
        </a>
      </div>
    </div>
  </div>
  <div class="reveal doc-viewer">
    <div class="row collapse">
      <div class="columns small-12">
        <div class="pdfViewerContainer">
          <div class="pdfViewer">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>